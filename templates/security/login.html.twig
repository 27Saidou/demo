{% extends "base.html.twig" %}
{% block body %}
    <h1>Connexion</h1>
    <form action="{{path ('security_login')}}" method="post">
        <div class="form-group">
            <input class="form-control" name="_username" placeholder="Addresse mail..." required type="text">
        </div>
        <div class="form-group">
            <input name="_password" placeholder="Mot de passe" required type="password" class="form-control">
        </div>
        <div class="form-group">
        <button  type="submit" class="btn btn-success">Connexion!</button>
        </div>
    </form>
{% endblock %}
